<%= error_messages_for 'device' %>

<div class="box tabular">

  <%= labelled_form_for(@device) do |f| %>

    <p><%= f.text_field :name %></p>
    <p><%= f.text_field :owner %></p>
    <p>
      <%= f.text_field :date_from %>
      <%= calendar_for('device_date_from') %>
    </p>
    <p>
      <%= f.text_field :date_to %>
      <%= calendar_for('device_date_to') %>
    </p>
    <p><%= f.file_field :picture %></p>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>
